<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"> <!-- Softer background color for a professional look -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_above="@+id/checkoutButton"> <!-- Make sure content is above the button -->

        <!-- Cart Header -->
        <TextView
            android:id="@+id/cartHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_orange_background"
            android:elevation="6dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Shopping Cart"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Container for back button and total price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/rounded_card_background"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <!-- Back to Products Button -->
            <Button
                android:id="@+id/backToProductsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:drawableLeft="@drawable/baseline_arrow_back_24"
                android:padding="10dp"
                android:text="Continue Shopping"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:elevation="3dp" />

            <!-- Total Price -->
            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total: $0.00"
                android:textColor="#50341F"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="10dp" />
        </LinearLayout>

        <!-- List of Cart Items -->
        <ListView
            android:id="@+id/cartListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#FF6F00"
            android:dividerHeight="1dp"
            android:background="@drawable/rounded_list_background"
            android:padding="8dp"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- Checkout Button positioned at the bottom -->
    <Button
        android:id="@+id/checkoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9800"
        android:drawablePadding="8dp"
        android:elevation="3dp"
        android:padding="10dp"
        android:text="Make Payment"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_alignParentBottom="true" /> <!-- Align to the bottom of the parent -->

</RelativeLayout>
