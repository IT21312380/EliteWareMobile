<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F8F8"> <!-- Light background color -->

    <!-- Cart Header -->
    <TextView
        android:id="@+id/cartHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FB7503"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Cart"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Back to Products Button -->
        <Button
            android:id="@+id/backToProductsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DBD0D0"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:padding="12dp"
            android:text="Products"
            android:textColor="#C7BBBB"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            android:drawablePadding="8dp" />

        <!-- Total Price -->
        <TextView
            android:id="@+id/totalPriceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total Price: $0.00"
            android:textColor="#50341F"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="end" />
    </LinearLayout>

    <!-- List of Cart Items -->
    <ListView
        android:id="@+id/cartListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#FF6F00"
        android:dividerHeight="1dp" />

    <!-- Checkout Button -->
    <Button
        android:id="@+id/checkoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF6F00"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textSize="18sp" />
</LinearLayout>
